<?xml version="1.0" encoding="UTF-8"?>
<server description="wordcounter server">

    <!-- Enable features -->
    <featureManager>
        <feature>jsp-2.2</feature>
    </featureManager>

    <httpEndpoint id="defaultHttpEndpoint"
                  host="*"
                  httpPort="9080"
                  httpsPort="9443" />

    <application context-root="wordcounter" type="war" id="wordcounter"
        location="wordcounter.war" name="wordcounter"/>

</server>
